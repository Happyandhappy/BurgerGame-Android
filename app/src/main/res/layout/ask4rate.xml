<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:padding="10.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView android:textStyle="bold" android:id="@+id/txtAskRating" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="@string/ask4rate_text" />
            <LinearLayout android:gravity="center_horizontal" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="fill_parent"
              xmlns:android="http://schemas.android.com/apk/res/android">
                <Button android:id="@+id/btnAskYes" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ask4rate_yes" />
                <Button android:id="@+id/btnAskNo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ask4rate_later" />
            </LinearLayout>
            <CheckBox android:id="@+id/chkNeverAskAgain" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ask4rate_checkbox" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>